<!DOCTYPE html>
<html>
<head>
  <title>Alhambra-Eidos MMS WP</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <link rel="stylesheet" href="/stylesheets/blueprint/screen.css" type="text/css" media="screen, projection">
  <link rel="stylesheet" href="/stylesheets/blueprint/print.css"  type="text/css" media="print"> 
  <!--[if lt IE 8]>
    <link rel="stylesheet" href="/stylesheets/blueprint/ie.css" type="text/css" media="screen, projection">
  <![endif]-->
  <%= yield(:head) %>
</head>
<body>

	<div class="container">
		 <div id="login" class="span-24 last">
		 	Login
            <hr>
        </div>

        <div class="span-24 last">
                <h1><%= link_to image_tag("Alhambra-Eidos.gif", :size => "150x75"), "/reports" %> </h1>
        </div>

		<div class="span-24 last">
             <div id="error_message">
                 <%- flash.each do |name, msg| -%>
                     <%= content_tag :div, msg, :id => "#{name}_message" %>
                 <%- end -%>
                 <% if flash[:warning] or flash[:notice]%>
                      <script type="text/javascript">
                          setTimeout("new Effect.Fade('error_message');", 3000)
                      </script>
                  <% end -%>
            </div>
		</div>
		<div id="menubar" class="span-24 last">
           <% if session[:user].nil? %>
                <div class="span-4">
                    <div id="menu<%= 'Current' if params[:controller] == 'reports' %>">
                        <%= image_tag "list_bullets_icon&16.png"  %>
                        <%= link_to "Rapports", reports_path %>
                    </div>
                </div>
                <div class="span-4">
                    <div id="menu<%= 'Current' if params[:controller] == 'users' %>">
                        <%= image_tag "user_icon&16.png"  %>
                        <%= link_to "Utilisateurs", users_path %>
                    </div>
                </div>
                <div class="span-4">
                    <div id="menu<%= 'Current' if params[:controller] == 'products' %>">
                        <%= image_tag "box_icon&16.png"  %>
                        <%= link_to "Produits", products_path %>
                    </div>
                </div>
                <hr />
            <% end %>
		</div>
			<%= yield %>
			<hr />
	</div>
</body>
</html>
